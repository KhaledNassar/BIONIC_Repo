/************* includes Start *************/
#include <stdio.h>
#include <stdlib.h>
/*************  includes End  *************/


/********************* Global Variables Section ***************************/
signed char character; //1 byte
unsigned char Ucharacter;

signed short int Short_int_number; //2 byte
unsigned short int UShort_int_number;

signed int int_number; //4 byte
unsigned int Uint_number;

signed long int long_int_number; //4 byte
unsigned long int Ulong_int_number;

signed long long int longlong_int_number; //8 byte
unsigned long long int Ulonglong_int_number;

float float_number; //4 byte 6 decimal points
double double_number; //8 byte 15 decimal points
long double long_double_number; //10 byte 19 decimal points
/**********************************************************************/

int main()
{
    printf("Enter a signed character \n");
    scanf("%c", &character);
    printf("Enter an unsigned character \n");
    scanf("%c", &Ucharacter);

    printf("Enter a signed short integer number \n");
    scanf("%hi", &Short_int_number);
    printf("Enter an unsigned short integer number \n");
    scanf("%hu", &UShort_int_number);

    printf("Enter a signed integer number \n");
    scanf("%d", &int_number);

    printf("Enter an unsigned integer number \n");
    scanf("%i", &Uint_number);

    printf("Enter a signed long integer number \n");
    scanf("%li", &long_int_number);
    printf("Enter an unsigned long integer number \n");
    scanf("%lu", &Ulong_int_number);

    printf("Enter a signed long long integer number \n");
    scanf("%lli", &long_int_number);
    printf("Enter an unsigned long long integer number \n");
    scanf("%llu", &long_int_number);

    printf("Enter a float number \n");
    scanf("%f", &float_number);

    printf("Enter a double number \n");
    scanf("%lf", &double_number);

    printf("Enter a long double number \n");
    scanf("%Lf", &long_double_number);

    printf("\n \n");

    printf("The signed character is: %c \n", character);
    printf("The unsigned character is: %c \n", Ucharacter);
    printf("The signed short integer number is: %hi \n", Short_int_number);
    printf("The unsigned short integer number is: %hu \n", UShort_int_number);
    printf("The signed integer number is: %i \n", int_number);
    printf("The unsigned integer number is: %u \n", Uint_number);
    printf("The signed long integer number is: %li \n", long_int_number);
    printf("The unsigned long integer number is: %lu \n", Ulong_int_number);
    printf("The signed long long integer number is: %lli \n", longlong_int_number);
    printf("The unsigned long long integer number is: %llu \n", Ulonglong_int_number);
    printf("The float number is: %f \n", float_number);
    printf("The double number is: %lf \n", double_number);
    printf("The long double number is: %Lf \n", long_double_number);
    printf("Thank You");


    return 0;
}
